{
    "compilerOptions": {
        "lib": [
            "es2017"
        ],
        "module": "commonjs",
        "target": "es2017",
        "allowJs": true,
        "esModuleInterop": true,
        "declaration": false,
        "composite": false,
        "stripInternal": true,
        "strict": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "moduleResolution": "node",
        "inlineSourceMap": true,
        "inlineSources": true,
        "experimentalDecorators": true
    }
}